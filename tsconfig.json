{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node24/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "checkJs": true
  },
  "include": [
    "./*.mjs",
    "./*.ts",
    "./**/*.ts",
    "./**/*.js"
  ],
  "exclude": ["_site/"]
}
