{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "checkJs": true
  },
  "include": [
    "./*.mjs",
    "./*.ts",
    "./**/*.ts",
    "./**/*.js"
  ],
}
